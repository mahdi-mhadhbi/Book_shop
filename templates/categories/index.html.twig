{% extends 'base.html.twig' %}

{% block body %}

    <!-- Hero area Start-->
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="slider-area">
                    <div class="slider-height2 slider-bg4 d-flex align-items-center justify-content-center">
                        <div class="hero-caption hero-caption2">
                            <h2>Book Category</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="listing-area pt-50 pb-50">
        <div class="container">
            <div class="row">
                <!--? Left content -->
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <!-- Book Filter Form Start -->
                    <div class="category-listing mb-50">
                        <div class="single-listing">
                            <div class="select-Categories pb-30">
                                <div class="small-tittle mb-20">
                                    <h4>Filter by Genres</h4>
                                </div>
                                {{ form_start(filterForm) }}
                                <div class="form-group">
                                    <strong>{{ form_label(filterForm.categories) }}</strong>
                                    <div>
                                        {% for category in filterForm.categories %}
                                            <div class="form-check">
                                                {{ form_widget(category, {'attr': {'class': 'form-check-input'}}) }}
                                                {{ form_label(category, null, {'attr': {'class': 'form-check-label'}}) }}
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <strong> {{ form_label(filterForm.authors) }}</strong>
                                    <div>
                                        {% for author in filterForm.authors %}
                                            <div class="form-check">
                                                {{ form_widget(author, {'attr': {'class': 'form-check-input'}}) }}
                                                {{ form_label(author, null, {'attr': {'class': 'form-check-label'}}) }}
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <strong>{{ form_label(filterForm.editors) }}</strong>
                                    <div>
                                        {% for editor in filterForm.editors %}
                                            <div class="form-check">
                                                {{ form_widget(editor, {'attr': {'class': 'form-check-input'}}) }}
                                                {{ form_label(editor, null, {'attr': {'class': 'form-check-label'}}) }}
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>




                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Filter</button>
                                </div>
                                {{ form_end(filterForm) }}
                            </div>
                        </div>
                    </div>
                    <!-- Book Filter Form End -->
                </div>
                <!--? Right content -->
                <div class="col-xl-8 col-lg-8 col-md-6">
                    <div class="row justify-content-end">
                        <div class="col-xl-4">
                            <div class="product_page_tittle">
                                <div class="short_by">
                                    <select name="#" id="product_short_list">
                                        <option>Browse by popularity</option>
                                        <option>Name</option>
                                        <option>NEW</option>
                                        <option>Old</option>
                                        <option>Price</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="best-selling p-0">
                        <div class="row">
                            {% for book in books %}
                                <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-12 col-sm-6">
                                    <div class="properties pb-30">
                                        <div class="properties-card">
                                            <div class="properties-img">
                                                <a href="{{ path('app_livre_show', {'id': book.id}) }}">
                                                    <img src="{{ asset('uploads/livres/' ~ (book.image is defined ? book.image : 'default.jpg')) }}"
                                                         alt="{{ book.titre }}">
                                                </a>
                                            </div>
                                            <div class="properties-caption properties-caption2">
                                                <h3><a href="{{ path('app_livre_show', {'id': book.id}) }}">{{ book.titre }}</a></h3>
                                                <p>{{ book.titre }}</p> <!-- Dynamic author name -->
                                                <div class="properties-footer d-flex justify-content-between align-items-center">
                                                    <div class="review">
                                                        <div class="rating">
                                                            <i class="fas fa-star"></i>
                                                            <i class="fas fa-star"></i>
                                                            <i class="fas fa-star"></i>
                                                            <i class="fas fa-star"></i>
                                                            <i class="fas fa-star-half-alt"></i>
                                                        </div>
                                                        <p>(<span>120</span> Review)</p> <!-- Dynamic review count -->
                                                    </div>
                                                    <div class="price">
                                                        <span>{{ book.prix | number_format(2, ',', '.') }}â‚¬</span> <!-- Price formatting -->
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- button -->
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="more-btn text-center mt-15">
                                <a href="/categories" class="border-btn border-btn2 more-btn2">Browse More</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

{% endblock %}