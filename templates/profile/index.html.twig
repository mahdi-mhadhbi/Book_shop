{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center mb-4">My Profile</h1>
    {% for type, messages in app.flashes %}
    <div class="alert alert-{{ type }}" role="alert">
        {% for message in messages %}
            {{ message }}
        {% endfor %}
    </div>
{% endfor %}

    <div class="row">
        <!-- Profile Information Form -->
        <div class="col-md-6">
            <h3>Update Profile</h3>
            <form method="post" action="{{ path('app_profile') }}">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">New Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Leave blank to keep current password">
                </div>
                <button type="submit" class="btn btn-primary">Update Profile</button>
            </form>


        </div>

        <!-- Commandes List -->
        <div class="col-md-6">
            <h3>My Orders</h3>
            <div class="card">

    
        <div class="table-responsive">
            <table class="table table-bordered table-md">
                <thead>
                    <tr>
                       
                        <th>Date</th>
                        <th>Total (â‚¬)</th>
                        <th>Items</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% if commandes|length > 0 %}
                        {% for commande in commandes %}
                            <tr>
                                
                                <td>{{ commande.date|date('Y-m-d H:i') }}</td>
                                <td>{{ commande.total|number_format(2, '.', ',') }}</td>
                                <td>
                                    <ul class="list-unstyled mb-0">
                                        {% for item in commande.items %}
                                            <li>{{ item.product.titre }} (x{{ item.quantity }})</li>
                                        {% endfor %}
                                    </ul>
                                </td>
                                <td>
                                    <a href="#" class="btn btn-secondary btn-sm">Details</a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">You have no orders yet.</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    
   
</div>

        </div>
    </div>
</div>
{% endblock %}
